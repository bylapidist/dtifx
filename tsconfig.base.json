{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "noEmitOnError": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useUnknownInCatchVariables": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@dtifx/audit": ["packages/audit/src/index.ts"],
      "@dtifx/audit/reporters": ["packages/audit/src/reporters/index.ts"],
      "@dtifx/audit/runtime": ["packages/audit/src/runtime/index.ts"],
      "@dtifx/audit/testing": ["packages/audit/src/testing/index.ts"],
      "@dtifx/build": ["packages/build/src/index.ts"],
      "@dtifx/build/cli/reporters": ["packages/build/src/cli/reporters.ts"],
      "@dtifx/cli": ["packages/cli/src/index.ts"],
      "@dtifx/cli/testing": ["packages/cli/src/testing/index.ts"],
      "@dtifx/core": ["packages/core/src/index.ts"],
      "@dtifx/core/config": ["packages/core/src/config/index.ts"],
      "@dtifx/core/logging": ["packages/core/src/logging/index.ts"],
      "@dtifx/core/policy": ["packages/core/src/policy/index.ts"],
      "@dtifx/core/policy/colors": ["packages/core/src/policy/colors/index.ts"],
      "@dtifx/core/policy/configuration": ["packages/core/src/policy/configuration/index.ts"],
      "@dtifx/core/policy/definitions": ["packages/core/src/policy/definitions/index.ts"],
      "@dtifx/core/policy/engine": ["packages/core/src/policy/engine/index.ts"],
      "@dtifx/core/policy/selectors": ["packages/core/src/policy/selectors/index.ts"],
      "@dtifx/core/policy/tokens": ["packages/core/src/policy/tokens/index.ts"],
      "@dtifx/core/reporting": ["packages/core/src/reporting/index.ts"],
      "@dtifx/core/runtime": ["packages/core/src/runtime/index.ts"],
      "@dtifx/core/sources": ["packages/core/src/sources/index.ts"],
      "@dtifx/core/telemetry": ["packages/core/src/telemetry/index.ts"],
      "@dtifx/core/testing": ["packages/core/src/testing/index.ts"],
      "@dtifx/diff": ["packages/diff/src/index.ts"],
      "@dtifx/diff/token-set": ["packages/diff/src/token-set.ts"]
    }
  }
}
