{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "docs-site",
  "projectType": "application",
  "sourceRoot": "docs",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.vitepress/dist"],
      "options": {
        "command": "pnpm exec vitepress build docs",
        "cwd": "{workspaceRoot}"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec vitepress dev docs",
        "cwd": "{workspaceRoot}"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec vitepress preview docs",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "pnpm exec markdownlint \"**/*.md\" --config .markdownlint.jsonc --ignore-path .markdownlintignore",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": ["scope:docs", "type:application"]
}
