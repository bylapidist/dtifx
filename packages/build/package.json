  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/bylapidist/dtifx.git",
    "directory": "packages/build"
  },
  "homepage": "https://dtifx.lapidist.net/build",
  "bugs": {
    "url": "https://github.com/bylapidist/dtifx/issues"
